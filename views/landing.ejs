    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>
    
    <div id="landing-header">
 		<h1>Welcome to Reddit Shop!</h1>
         <p>A Reddit Clone but for items on sale!</p>
		<a href="/posts" class="btn btn-lg btn-success">View All items</a>
    </div>
    
